---
pagination:
  data: apps
  size: 1
  alias: app
permalink: "{{ app.slug }}/index.html"
eleventyComputed:
  title: "{{ app.title }}"
  description: "{{ app.description }}"
  keywords: "{{ app.keywords }}"
  canonical: "{{ app.canonical }}"
  ogTitle: "{{ app.ogTitle }}"
  ogDescription: "{{ app.ogDescription }}"
  ogUrl: "{{ app.canonical }}"
  ogImageWidth: "1280"
  ogImageHeight: "640"
  ogLocale: "en_US"
layout: layouts/mobile-app.njk
---
{% block jsonld %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "MobileApplication",
    "name": "{{ app.name }}",
    "applicationCategory": "UtilitiesApplication",
    "operatingSystem": "{% if app.showIos and app.showAndroid %}iOS, Android{% elif app.showIos %}iOS{% else %}Android{% endif %}",
    "description": "{{ app.appDescription }}",
    "url": "{{ app.canonical }}",
    "softwareVersion": "1.0.0",
    "author": {
        "@type": "Organization",
        "name": "CueCard",
        "url": "https://cuecard.dev"
    },
    "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
    },
    "featureList": [
        {% for feature in app.features %}"{{ feature.title }}: {{ feature.description }}"{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}
</script>
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
        {% for faq in app.faq %}
        {
            "@type": "Question",
            "name": "{{ faq.question }}",
            "acceptedAnswer": {
                "@type": "Answer",
                "text": "{{ faq.answer | replace('"', '\\"') | striptags }}"
            }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}
</script>
{% endblock %}

{% block body %}
<nav class="nav{% if app.platform == 'both' %} nav-app-both{% endif %}">
    <a href="/{{ app.slug }}/" class="nav-logo">
        <img class="logo-icon" src="/assets/logo-circle.png" width="32" height="32" alt="" aria-hidden="true">
        <span>CueCard</span>
    </a>
    <div class="nav-links">
        <a href="https://github.com/thisisnsh/cuecard" target="_blank" rel="noopener" class="nav-link github-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
