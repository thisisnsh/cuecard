---
pagination:
  data: mobileProfessions
  size: 1
  alias: mobileProfession
permalink: "mobile/{{ mobileProfession.slug }}/index.html"
eleventyComputed:
  title: "{{ mobileProfession.title }}"
  description: "{{ mobileProfession.description }}"
  keywords: "{{ mobileProfession.keywords }}"
  canonical: "{{ mobileProfession.canonical }}"
  ogTitle: "{{ mobileProfession.ogTitle }}"
  ogDescription: "{{ mobileProfession.ogDescription }}"
  ogUrl: "{{ mobileProfession.canonical }}"
  ogImageWidth: "1280"
  ogImageHeight: "640"
  ogLocale: "en_US"
layout: layouts/mobile-profession.njk
---
{% block jsonld %}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "MobileApplication",
    "name": "CueCard for {{ mobileProfession.name }}",
    "applicationCategory": "UtilitiesApplication",
    "operatingSystem": "iOS, Android",
    "description": "{{ mobileProfession.description }}",
    "url": "{{ mobileProfession.canonical }}",
    "softwareVersion": "1.0.0",
    "author": {
        "@type": "Organization",
        "name": "CueCard",
        "url": "https://cuecard.dev"
    },
    "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
    },
    "featureList": [
        "Floating teleprompter over any app",
        "Auto-scroll at custom speed",
        "Resizable teleprompter window",
        "Works with Camera, Instagram, TikTok, and more"
    ]
}
</script>
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
        {% for faq in mobileProfession.faq %}
        {
            "@type": "Question",
            "name": "{{ faq.question }}",
            "acceptedAnswer": {
                "@type": "Answer",
                "text": "{{ faq.answer | replace('"', '\\"') | striptags }}"
            }
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}
</script>
{% endblock %}

{% block body %}
<nav class="nav">
    <a href="/mobile/{{ mobileProfession.slug }}/" class="nav-logo">
        <img class="logo-icon" src="/assets/logo-circle.png" width="32" height="32" alt="" aria-hidden="true">
        <span>CueCard</span>
    </a>
    <div class="nav-links">
        <a href="https://github.com/thisisnsh/cuecard" target="_blank" rel="noopener" class="nav-link github-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
