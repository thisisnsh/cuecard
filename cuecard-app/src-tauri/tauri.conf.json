{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CueCard",
  "version": "1.0.1",
  "identifier": "com.thisisnsh.cuecard",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "CueCard",
        "width": 600,
        "height": 300,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 300,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": true,
        "contentProtected": true,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": true,
        "focus": false,
        "acceptFirstMouse": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "resources": [
      "../firebase-config.json"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "category": "Productivity",
    "shortDescription": "Speaker notes visible only to you — for presentations, meetings, dates and everything.",
    "longDescription": "Speaker notes visible only to you — for presentations, meetings, dates and everything.",
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "background": "../../cuecard-assets/dmg-background.png"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/thisisnsh/cuecard/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU2NjY0RDBEN0M3MjExRTcKUldUbkVYSjhEVTFtNWt1U3N4Y3VuN0Q2MUdqT0RhOUpsOXhGMm4vSUVuUHFVaC85cy82bFlIbnAK"
    }
  }
}
